algoritmo "Exe20703"
// Area do triângulo
var
  Area:real
  Base:real
  Altura:real
  
inicio
  escreva(" Informe a base do Triângulo: ")
  leia(Base)
  escreva(" Informe a Altura do Triângulo: ")
  leia(Altura)
  
  Area <- Base *Altura / 2
  
  escreval(" ------O Resultado da Área do Triângulo é--------- ")
  escreval(" Área: " ,Area)
  
  
fimalgoritmo
